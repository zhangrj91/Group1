<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeroDetail">
    <ImageView
        android:id="@+id/hero_detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/juyoujing"/>

    <TextView
        android:id="@+id/hero_detail_name_label"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="名字： "
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_image"/>

    <EditText
        android:id="@+id/hero_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="橘右京"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/hero_detail_name_label"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_image"/>

    <TextView
        android:id="@+id/hero_detail_alias_label"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="称号： "
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_name_label"/>

    <EditText
        android:id="@+id/hero_detail_alias"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="神梦一刀"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_name_label"
        app:layout_constraintStart_toEndOf="@id/hero_detail_alias_label" />
    <TextView
        android:id="@+id/hero_detail_clan_label"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="职业： "
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_alias_label"/>

    <EditText
        android:id="@+id/hero_detail_clan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="刺客"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_alias_label"
        app:layout_constraintStart_toEndOf="@id/hero_detail_clan_label" />

    <ImageButton
        android:id="@+id/hero_detail_delete"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/red"
        android:src="@mipmap/ic_action_cancel"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/hero_detail_clan"/>
\
</android.support.constraint.ConstraintLayout>